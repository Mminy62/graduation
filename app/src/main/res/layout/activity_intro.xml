<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#212121">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:scale_base_height="1800"
        app:scale_base_width="1000"
        tools:ignore="MissingPrefix">

        <TextView
            android:id="@+id/textView"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:bufferType="spannable"
            android:fontFamily="@font/notosanskrmedium"
            android:text="AR로 즐기는\n드라마 촬영장소"
            android:textColor="#fff"
            app:scale_height="245"
            app:scale_left="50"
            app:scale_textsize="48"
            app:scale_top="50"
            app:scale_width="320" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copyright © 성균관대학교 All Rights Reserved."
            android:fontFamily="@font/notosanskrregular"
            android:textColor="#fff"
            android:textSize="11dp"
            android:gravity="center"
            app:scale_width="1000"
            app:scale_height="70"
            app:scale_textsize="33"
            app:scale_top="1650">
        </TextView>


        <ImageButton
        android:id="@+id/musicnote_btn"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="@drawable/musicnote_btn_bg"
        android:src="@drawable/musicnote_btn_illust"
        app:scale_height="400"
        app:scale_top="0"
        app:scale_width="930" />

        <TextView
            android:id="@+id/musicnote_btn_text"
            android:layout_width="140dp"
            android:layout_height="84dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#FF5D4D"
            android:fontFamily="@font/notosanskrregular"
            android:clickable="false"
            android:textStyle="bold"
            android:bufferType="spannable"
            android:text="#두근두근_행사장_가는_길\nAR 음악노트"
            app:scale_height="400"
            app:scale_textsize="50"
            app:scale_top="0"
            app:scale_width="950" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

</LinearLayout>