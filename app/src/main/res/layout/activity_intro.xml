<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#212121">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:scale_base_height="1800"
        app:scale_base_width="1000"
        tools:ignore="MissingPrefix">

        <TextView
            android:id="@+id/textView"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:bufferType="spannable"
            android:fontFamily="@font/sourcesansproregular"
            android:text="Filming Locations \nwith AR"
            android:textColor="#fff"
            app:scale_height="245"
            app:scale_left="50"
            app:scale_textsize="60"
            app:scale_top="80"
            app:scale_width="600" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copyright © 성균관대학교 All Rights Reserved."
            android:fontFamily="@font/notosanskrregular"
            android:textColor="#fff"
            android:textSize="11dp"
            android:gravity="center"
            app:scale_width="1000"
            app:scale_height="70"
            app:scale_textsize="33"
            app:scale_top="1650">
        </TextView>

        <ImageView
            android:id="@+id/poster1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ourbelovedsummer"
            app:scale_width="300"
            app:scale_height="400"
            app:scale_top="320"
            app:scale_left="40"
            />
        <ImageView
            android:id="@+id/poster2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/crashlandingonlove"
            app:scale_width="300"
            app:scale_height="400"
            app:scale_top="320"
            app:scale_left="350"
            />
        <ImageView
            android:id="@+id/poster3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/squidgame"
            app:scale_width="300"
            app:scale_height="400"
            app:scale_top="320"
            app:scale_left="660"
            />
        <ImageView
            android:id="@+id/poster4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/itaewonclass"
            app:scale_width="300"
            app:scale_height="400"
            app:scale_top="760"
            app:scale_left="40"
            />
        <ImageView
            android:id="@+id/poster5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/weatherpeople"
            app:scale_width="300"
            app:scale_height="400"
            app:scale_top="760"
            app:scale_left="350"
            />

        <ImageView
            android:id="@+id/poster6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mrsunshine"
            app:scale_width="300"
            app:scale_height="400"
            app:scale_top="760"
            app:scale_left="660"
            />


        <Button
            android:id="@+id/intro_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg02"
            android:text="Search Drama"
            android:fontFamily="@font/sourcesansproregular"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:scale_width="750"
            app:scale_height="180"
            app:scale_textsize="50"
            app:scale_top="500"
            android:layout_gravity="center"/>


    </com.ssomai.android.scalablelayout.ScalableLayout>

</LinearLayout>