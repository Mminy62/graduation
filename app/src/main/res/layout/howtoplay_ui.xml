<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#CC000000">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:scale_base_height="640"
        app:scale_base_width="360"
        tools:ignore="MissingPrefix">

        <TextView
            android:id="@+id/howtodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="How To Do?"
            android:gravity="center"
            android:textColor="#FF5D4D"
            android:fontFamily="@font/notosanskrmedium"
            app:scale_width="360"
            app:scale_height="30"
            app:scale_textsize="16"
            app:scale_top="242"
             />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="거리 곳곳에 숨어있는 앨범을 찾아 터치하고\n재생되는 K-Pop 음악 리듬과 함께\n날아오는 음표들을 타이밍에 맞춰 터뜨려\n점수를 올려보세요!"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/notosanskrmedium"
            app:scale_width="310"
            app:scale_height="90"
            app:scale_textsize="14"
            app:scale_top="274"
            app:scale_left="25"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_height="15"
            app:scale_left="178"
            app:scale_top="375"
            app:scale_width="15"
            app:srcCompat="@drawable/ic_arrow" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_tap_up"
            app:scale_width="78"
            app:scale_height="101"
            app:scale_top="410"
            app:scale_left="26"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_tap_up"
            app:scale_width="78"
            app:scale_height="101"
            app:scale_top="410"
            app:scale_left="143"/>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_tap_up"
            app:scale_width="78"
            app:scale_height="101"
            app:scale_top="410"
            app:scale_left="256"/>

        <Button
            android:id="@+id/checkBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/normal_btn_bg"
            android:text="시작!"
            android:fontFamily="@font/notosanskrregular"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:scale_textsize="16"
            app:scale_width="134"
            app:scale_height="44"
            app:scale_top="544"
            app:scale_left="113"/>


    </com.ssomai.android.scalablelayout.ScalableLayout>
</FrameLayout>