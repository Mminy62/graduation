<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/gamenote_ui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:scale_base_height="1800"
        app:scale_base_width="1000"
        tools:ignore="MissingPrefix">


        <ImageView
            android:id="@+id/line01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_line"
            app:scale_top="450"
            app:scale_height="1450"
            app:scale_left="180"
            app:scale_width="300"/>

        <ImageView
            android:id="@+id/line02"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_line"
            app:scale_top="450"
            app:scale_height="1450"
            app:scale_left="530"
            app:scale_width="300" />

        <ImageView
            android:id="@+id/backgraoud01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_red"
            app:scale_height="1800"
            app:scale_left="10"
            app:scale_top="0"
            app:scale_width="300" />

        <ImageView
            android:id="@+id/tapbutton01"
            android:layout_width="wrap_content"
            android:layout_height="198dp"
            android:src="@drawable/ic_tap_up"
            app:scale_height="300"
            app:scale_left="10"
            app:scale_top="1300"
            app:scale_width="300" />

        <ImageView
            android:id="@+id/gettapbutton01"
            android:layout_width="wrap_content"
            android:layout_height="198dp"
            android:src="@drawable/ic_tap_down"
            app:scale_height="300"
            app:scale_left="10"
            app:scale_top="1300"
            app:scale_width="300" />


        <ImageView
            android:id="@+id/backgraoud02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_blue"
            app:scale_height="1800"
            app:scale_left="345"
            app:scale_top="0"
            app:scale_width="310"
            />

        <ImageView
            android:id="@+id/tapbutton02"
            android:layout_width="wrap_content"
            android:layout_height="198dp"
            android:src="@drawable/ic_tap_up"
            app:scale_height="300"
            app:scale_left="365"
            app:scale_top="1300"
            app:scale_width="300"/>

        <ImageView
            android:id="@+id/gettapbutton02"
            android:layout_width="wrap_content"
            android:layout_height="198dp"
            android:src="@drawable/ic_tap_down"
            app:scale_height="300"
            app:scale_left="365"
            app:scale_top="1300"
            app:scale_width="300"/>


        <ImageView
            android:id="@+id/backgraoud03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_green"
            app:scale_height="1800"
            app:scale_left="690"
            app:scale_top="0"
            app:scale_width="300"
            />


        <ImageView
            android:id="@+id/tapbutton03"
            android:layout_width="wrap_content"
            android:layout_height="198dp"
            android:src="@drawable/ic_tap_up"
            app:scale_height="300"
            app:scale_left="710"
            app:scale_top="1300"
            app:scale_width="300"/>

        <ImageView
            android:id="@+id/gettapbutton03"
            android:layout_width="wrap_content"
            android:layout_height="198dp"
            android:src="@drawable/ic_tap_down"
            app:scale_height="300"
            app:scale_left="710"
            app:scale_top="1300"
            app:scale_width="300"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ui_score_bg01"
            app:scale_width="300"
            app:scale_height="170"
            app:scale_left="680"
            app:scale_top="50"
            />
        <TextView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:textColor="#fff"
            android:text="현재 스코어"
            android:textAlignment="center"
            android:textStyle="bold"
            app:scale_textsize="30"
            app:scale_width="300"
            app:scale_height="50"
            app:scale_left="680"
            app:scale_top="80"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ui_score_bg02"
            app:scale_width="300"
            app:scale_height="150"
            app:scale_left="680"
            app:scale_top="90"
            />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskrmedium"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#C0EF3629"
            android:textStyle="bold"
            app:scale_height="120"
            app:scale_left="650"
            app:scale_top="80"
            app:scale_width="300"
            app:scale_textsize="60"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskrmedium"
            android:text="점"
            android:textAlignment="center"
            android:textColor="#C0EF3629"
            android:textStyle="bold"
            app:scale_height="100"
            app:scale_left="750"
            app:scale_textsize="40"
            app:scale_top="120"
            app:scale_width="300" />



    </com.ssomai.android.scalablelayout.ScalableLayout>

</LinearLayout>