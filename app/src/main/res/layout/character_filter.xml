<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/scalableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:scale_base_height="1800"
        app:scale_base_width="1000">

        <ImageView
            android:id="@+id/filter_img01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:scale_height="1800"
            app:scale_left="0"
            app:scale_top="0"
            app:scale_width="1000"
            app:srcCompat="@drawable/filter01" />

        <ImageView
            android:id="@+id/filter_img02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:scale_height="1800"
            app:scale_left="0"
            app:scale_top="0"
            app:scale_width="1020"
            app:srcCompat="@drawable/filter02" />

        <ImageView
            android:id="@+id/filter_img03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:scale_width="850"
            app:scale_height="1800"
            app:scale_left="0"
            app:scale_top="0"
            app:srcCompat="@drawable/filter03" />


        <Button
            android:id="@+id/select_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg01"
            android:text="next"
            android:textColor="#212121"
            android:textStyle="bold"
            app:scale_height="100"
            app:scale_left="70"
            app:scale_textsize="50"
            app:scale_top="70"
            app:scale_width="200" />

        <Button
            android:id="@+id/camera_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:textColor="#212121"
            android:textStyle="bold"
            android:layout_gravity="center|bottom"
            app:scale_height="150"
            app:scale_left="0"
            app:scale_textsize="50"
            app:scale_top="-50"
            app:scale_width="150" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

</LinearLayout>